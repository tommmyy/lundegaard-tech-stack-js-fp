{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "quote-props": ["error", "as-needed"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}